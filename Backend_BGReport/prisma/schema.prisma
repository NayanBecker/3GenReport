// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[] // Um usuário pode ter muitos projetos
}

model Project {
  id              String   @id @default(cuid())
  title           String
  documentConfig  String? // O '?' torna o campo opcional
  documentContent String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String // Chave estrangeira para o usuário

  @@map("projects")
}
